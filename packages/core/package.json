{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@ivycord-js/core",
  "version": "0.0.1",
  "description": "A core package of IvyCord.js library.",
  "license": "MIT",
  "homepage": "https://ivycord.js.org",
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "check-format": "prettier . --check",
    "run-format": "prettier . --write"
  },
  "contributors": [
    "null68",
    "kikorp78",
    "jvvan"
  ],
  "keywords": [
    "discord",
    "api",
    "wrapper",
    "node",
    "ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ivycord-js/ivycord.js.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/ivycord-js/ivycord.js/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.14.0",
  "dependencies": {
    "@ivycord-js/gateway": "workspace:^",
    "@ivycord-js/rest": "workspace:^",
    "@ivycord-js/utils": "workspace:^",
    "discord-api-types": "^0.37.67",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.10.6",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  }
}
